set number
syntax enable
set tabstop=4
set expandtab
set list
set listchars=tab:>-,trail:-
set cursorline
set shiftwidth=4
set smartindent
set autoindent
set cmdheight=2
set laststatus=2
set statusline=\ %<%F[%1*%M%*%n%R%H]%=\ %y\ %0(%{&fileformat}\ %{&encoding}\ %c:%l/%L%)\  "
set ignorecase
set smartcase
set hlsearch
set incsearch
set wildmenu
filetype plugin indent on
